<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Your Inventory:</h4>
    </div>
    <div class="panel-body">
        <form class="form-inline" role="form" method="post" action="/inventory">
            <div class="form-group">
                <label class="sr-only" for="inputItem">Item</label>
                <input type="text" class="form-control" id="inputItem" name="itemName"
                       required="true" placeholder="Enter item">
            </div>
            <div class="form-group">
                <label class="sr-only" for="inputQuantity">Quantity</label>
                <input type="number" class="form-control" id="inputQuantity" name="quantity">
            </div>
            <div class="form-group">
                <label class="sr-only" for="inputUnits">Units</label>
                <select class="form-control" id="inputUnits" name="unit">
                    {{>measurement-units}}
                </select>
            </div>
            <button type="submit" class="btn btn-default">Add Item</button>
        </form>

        <div class="panel-group" id="accordion">
        {{#each inventory}}
            <div class="panel panel-default">
                <a data-toggle="collapse" data-parent="#accordion" href="#item{{id}}">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{name}}</h5>
                        {{inventoryItem.quantity}} {{inventoryItem.unit}}
                    </div>
                </a>
                <div id="item{{id}}" class="panel-collapse collapse">
                    <div class="panel-body">
                        <!-- TODO use "DELETE /inventory/:itemID" -->
                        <form method="get" action="/inventory/delete/{{id}}">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</div>