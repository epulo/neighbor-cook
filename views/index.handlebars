<div id="search">
    <h2 style="font-family: 'Raleway', sans-serif;">Search for food items in your neighborhood:</h2>
    <div id="bar">
        <form id="newsearch" method="get" action="http://www.google.com">
            <input type="text" class="inputtext" name="query" size="20" maxlength="100">
            <input type="submit" value="search" class="button">
        </form>
    <div class="clear"></div>
    </div>
</div>
<h3>Current Bulletin Board</h3>
<table class="table table-hover">
    {{#each bulletins}}
    <tr class="row">
        <td>{{item.name}}</td>
        <td>{{quantity}}</td>
        <td class="{{type}}">{{type}}</td>
        <td>{{message}}</td>
        <td><a href="/profile/{{user.id}}">{{user.first_name}}</a></td>
    </tr>
    {{/each}}
    
</table>


