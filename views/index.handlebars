{{#if errorNotLoggedIn}}
    <div class="alert alert-warning">
        <a class="close" data-dismiss="alert">Ã—</a>
        <div id="flash_error">You must be logged in to do that.</div>
    </div>
{{/if}}

<h2>Welcome back!</h2>

{{#if requests}}
<h4>People around you need...</h4>
<table class="table table-hover">
    {{#each requests}}
    <tr class="row">
        <td>{{item.name}}</td>
        <td>{{message}}</td>
        <td><a href="/profile/{{user.id}}">{{user.first_name}}</a></td>
    </tr>
    {{/each}}
</table>
{{/if}}

{{#if offers}}
<h4>People around you are offering...</h4>
<table class="table table-hover">
    {{#each offers}}
        <tr class="row">
            <td>{{item.name}}</td>
            <td>{{message}}</td>
            <td><a href="/profile/{{user.id}}">{{user.first_name}}</a></td>
        </tr>
    {{/each}}
</table>
{{/if}}

{{#if authored}}
<h4>Your open bulletins:</h4>
<table class="table table-hover">
    {{#each authored}}
        <tr class="row">
            <td class="{{type}}">{{type}}</td>
            <td>{{item.name}}</td>
            <td>{{message}}</td>
        </tr>
    {{/each}}
</table>
{{/if}}

<div class="bottom nav">
    <div class="footer inline-list">
        <ul>
            <li>About</li>
            <li>
                <a href="/help">Help</a>
            </li>
        </ul>
    </div>
</div>