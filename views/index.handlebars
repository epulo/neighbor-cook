{{#if errorNotLoggedIn}}
  <div class="alert alert-warning">
    <a class="close" data-dismiss="alert">Ã—</a>
    <div id="flash_error">You must be logged in to do that.</div>
  </div>
{{/if}}

<h2>Welcome to NeighborCook</h2>

<form method="get">
  <input type="text" class="inputtext" name="query" size="20" maxlength="100" placeholder="Ingredient Search">
  <input type="submit" value="search" class="button">
</form>

{{#if searchResults}}
<div class="list-group">
  <p>Your search for <strong>{{searchResults.query}}</strong> returned {{searchResults.results.length}} results:</p>
  {{#each searchResults.results}}
      <a href="/profile/{{id}}" class="list-group-item">
        <h5 class="list-group-item-heading">{{name}}</h5>
        <p class="list-group-item-text">{{location}}</p>
      </a>
  {{/each}}
  <!-- TODO: support infinite scroll -->
</div>
{{/if}}

{{#if requests}}
<h4>People around you need...</h4>
<table class="table table-hover">
  {{#each requests}}
  <tr class="row">
    <td>{{item.name}}</td>
    <td>{{message}}</td>
    <td><a href="/profile/{{user.id}}">{{user.first_name}}</a></td>
  </tr>
  {{/each}}
</table>
{{/if}}

{{#if offers}}
<h4>People around you are offering...</h4>
<table class="table table-hover">
  {{#each offers}}
    <tr class="row">
      <td>{{item.name}}</td>
      <td>{{message}}</td>
      <td><a href="/profile/{{user.id}}">{{user.first_name}}</a></td>
    </tr>
  {{/each}}
</table>
{{/if}}

{{#if authored}}
<h4>Your open bulletins:</h4>
<table class="table table-hover">
  {{#each authored}}
    <tr class="row">
      <td class="{{type}}">{{type}}</td>
      <td>{{item.name}}</td>
      <td>{{message}}</td>
    </tr>
  {{/each}}
</table>
{{/if}}

